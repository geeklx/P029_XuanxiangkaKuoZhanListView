<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addHeaderView_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/huadong_right_demo"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/geren_bufen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/huadong_right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView0113"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingTop="6dip"
            android:src="@drawable/doghouse_logo" />

        <TextView
            android:id="@+id/zhongxin_content"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_toRightOf="@+id/imageView0113"
            android:clickable="false"
            android:gravity="left"
            android:paddingLeft="10dip"
            android:paddingTop="5dip"
            android:text="个人中心"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gerenziliao_bufen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geren_bufen"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView_demo"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="30dip"
            android:paddingTop="10dip"
            android:src="@drawable/doghouse_logo" />

        <TextView
            android:id="@+id/childTo_demo"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_toRightOf="@+id/imageView_demo"
            android:gravity="left"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingTop="15dip"
            android:text="个人资料"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>